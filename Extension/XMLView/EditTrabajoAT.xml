<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12" overwrite="true">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="idtrabajo"/>
            </column>
            <column name="service" display="none" numcolumns="2" order="110">
                <widget type="autocomplete" fieldname="idservicio" onclick="EditServicioAT">
                    <values source="serviciosat" fieldcode="idservicio"/>
                </widget>
            </column>
        </group>
        <group name="invoice" numcolumns="12" overwrite="true">
            <column name="reference" titleurl="ListProducto" numcolumns="2" order="100">
                <widget type="autocomplete" fieldname="referencia">
                    <values source="Variante" fieldcode="referencia" fieldtitle="referencia"/>
                </widget>
            </column>
            <column name="description" numcolumns="4" order="110">
                <widget type="textarea" fieldname="descripcion" rows="1"/>
            </column>
            <column name="extinguisher" numcolumns="2" order="120">
                <widget type="autocomplete" fieldname="idextinguisher">
                    <values source="extinguishers" fieldcode="id" fieldtitle="serialnumber"/>
                </widget>
            </column>
            <column name="manufacture-date" order="130">
                <widget type="date" fieldname="manufacturedate"/>
            </column>
            <column name="lastreview-date" order="140">
                <widget type="date" fieldname="lastreviewdate"/>
            </column>
            <column name="laststamp-date" order="150">
                <widget type="date" fieldname="laststampdate"/>
            </column>
            <column name="operation" order="160">
                <widget type="text" fieldname="operation"/>
            </column>
            <column name="verification" display="center" order="170">
                <widget type="checkbox" fieldname="verification"/>
            </column>
        </group>
    </columns>
</view>